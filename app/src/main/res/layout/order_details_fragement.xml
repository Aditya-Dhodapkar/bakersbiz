<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_order_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.orderdetails.OrderDetailsFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/order_details"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/order_customer_details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Customer name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/order_item_details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Item name"
                android:inputType="textPersonName"
                />

            <EditText
                android:id="@+id/order_delivery_date_details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Order delivery date (DD/MM/YYYY)"
                android:inputType="datetime" />

            <EditText
                android:id="@+id/order_item_quantity_details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Quantity"
                android:inputType="number"
                />

            <EditText
                android:id="@+id/order_price_details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Total Price"
                android:inputType="numberDecimal"
                />

            <MultiAutoCompleteTextView
                android:id="@+id/order_item_description_details"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Additional order details"
                android:fitsSystemWindows="true"
                android:breakStrategy="balanced"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/order_submit_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:elevation="4dp"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:layout_marginBottom="8dp"
                android:text="Submit"
                android:textColor="#fff" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>